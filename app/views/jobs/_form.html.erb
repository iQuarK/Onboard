    <%= f.label :remote %>
    <div class="input-right">
      <%= f.check_box :remote %>
    </div>
  </div>
  <div class="field">
    <%= f.label :industry %>
    <div class="input-right">
      <%= f.text_field :industry %>
    </div>
  </div>
  <div class="field">
    <%= f.label :job_type %>
    <div class="input-right">
