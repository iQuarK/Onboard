<div class="careers-container">

  <section class="hero">
    <%= link_to root_path(subdomain: @company.subdomain) do %><%= image_tag @company.logo_url, class: "company-logo" %><% end %>
  </section>

  <section class="sub-nav">
    <div class="content">
      <ul>
        <li><%= link_to 'Job Description', job_path %></li>
        <li><%= link_to 'Requirements', job_path, :anchor => "requirements" %></li>
        <li><%= link_to 'Benefits', job_path, :anchor => 'benefits' %></li>
        <li><%= link_to 'Apply for this job', apply_job_url(@job, subdomain: @company.subdomain) %></li>
      </ul>
    </div>
  </section>

  <section class="overview" id="overview">
    <div class="content pad-vert-medium">
      <div class="intro">
        <h4>Apply for <%= @job.title %></h4>
      </div>
      <%= form_for @application, url: apply_job_url(@job), html: { multipart: true } do |f| %>

        <%= render 'shared/error_list', model: @application %>

        <div class="field-row">
          <%= f.label :name %>
          <%= f.text_field :name %>
        </div>

        <div class="field-row">
          <%= f.label :email %>
          <%= f.email_field :email %>
        </div>

        <div class="field-row">
          <%= f.label :phone %>
          <%= f.text_field :phone %>
        </div>

        <div class="field-row">
          <%= f.label :address %>
          <%= f.text_field :address %>
        </div>

        <div class="field-row">
          <%= f.label :summary %>
          <%= f.text_area :summary, rows: 5 %>
        </div>

        <div class="field-row">
          <%= f.label :resume %>
          <%= f.file_field :resume %>
          <%= f.hidden_field :resume_cache %>
        </div>

        <%= f.fields_for :attachments do |attachment| %>
          <%= render 'attachment_fields', f: attachment %>
          <%= link_to_add_association "add attachment", f, :attachments, { "data-association-insertion-method" => "before", "data-association-insertion-node" => 'this' } %>
        <% end %>

        <div class="action">
          <%= f.submit 'Apply', class: "button-green" %>
        </div>

      <% end %>

      <%= link_to 'Authorise Linkedin', linkedin_auth_url(subdomain: @company.subdomain), class: 'button' %>

    </div>
  </section>

</div>


<script type="text/javascript">
  $(document).ready(function(){

    // -------------------------------------------------------------------------
    // Use Colour Thief to set background colour using the logo
    // -------------------------------------------------------------------------

    var colorsForImage = function($image) {
      var colorThief = new ColorThief();
      var image = $image[0];
      var color = colorThief.getColor(image);
      var palette = colorThief.getPalette(image);
      var colorThiefOutput = {
        rgb: {
          color: color,
          palette: palette
        },
        hex: {
          color: rgbToHex(color[0], color[1], color[2]),
          palette: palette.map(function(item){ return rgbToHex(item[0], item[1], item[2]); })
        }
      };
      return colorThiefOutput;
    };
    function componentToHex(c) {
        var hex = c.toString(16);
        return hex.length == 1 ? "0" + hex : hex;
    }
    function rgbToHex(r, g, b) {
        return "#" + componentToHex(r) + componentToHex(g) + componentToHex(b);
    }

    var colours = colorsForImage($('.company-logo'));
    $('body').css('background-color', colours['hex']['color']);
    $('h4').css('color', colours['hex']['color']);
    $('.button-blue').css('background-color', colours['hex']['color']);
    // $('section').css('border-color', colours['hex']['color']);

  });
</script>

