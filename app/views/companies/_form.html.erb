<%= form_for(@company) do |f| %>

  <%= render 'shared/error_list', model: @company %>

  <div class="field group">
    <%= f.label :name %>
    <div class="input-right">
      <%= f.text_field :name %>
    </div>
  </div>

  <div class="field">
    <%= f.label :subdomain %>
    <div class="input-right">
      <%= f.text_field :subdomain %>
    </div>
  </div>

  <div class="field">
    <%= f.label :description %>
    <div class="input-right">
      <%= f.text_area :description, rows: 5 %>
    </div>
  </div>

  <div class="field">
    <%= f.label :industry %>
    <div class="input-right">
      <%= f.text_field :industry %>
    </div>
  </div>

  <div class="field">
    <%= f.label :location %>
    <div class="input-right">
      <%= f.text_field :location %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit 'Create Company', class: "button" %>
  </div>

<% end %>
