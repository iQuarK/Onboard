<%= render 'layouts/header' %>

<body class="l-marketing">

	<header class="top-bar">

		<div class="content-wrapper">
			<%= link_to 'pinpoint', root_url(subdomain: false), class: 'logo' %>

			<nav class="main-nav">

				<ul>
					<li><%= link_to "Home", root_url(subdomain: false) %></li>
					<li><%= link_to "About", about_url(subdomain: false) %></li>
					<li><%= link_to "Pricing", pricing_url(subdomain: false) %></li>
					<% if user_signed_in? %>
						<li><%= link_to "Dashboard", admin_url(subdomain: current_user.companies.first.subdomain) %></li>
						<li><%= link_to "Logout", destroy_user_session_path, method: :delete %></li>
					<% else %>
						<li><%= link_to "Login", login_path %></li>
					<% end %>
				</ul>
				
			</nav>
		</div>

	</header>

	<%= yield %>

	<%= render 'layouts/marketing_footer' %>

</body>

